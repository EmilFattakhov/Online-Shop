<% if @tag.present? %>
    <h2>Showing Questions tagged by: 
        <span class="badge badge-pill badge-primary"><%= @tag.name %></span>
    </h2>
<% end %>
<div class="row">
    <div class="=col-2">
    </div>

    <div class="col-10">
    <% @questions.each do |question| %>
        <div>
            <h3><%= link_to question.title, question_path(question) %></h3>
            <% if question.answers_count %>
                <small>Answers Count: <%= question.answers_count %></small>
            <% end %>
            <hr />
        </div>
    <% end %>
    </div>
</div>